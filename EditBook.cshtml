<section class="vh-100" style="background-color: #eee;">

    <div class="card text-black" style="border-radius: 25px;">
        <div class="card-body p-md-5">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add Employee</p>

                    <form method="post" action="EditBook" class="mx-1 mx-md-4">

                        <input value="@Model.BookId" name="BookId" hidden><br><br>

                        <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                                <input value="@Model.BookTitle" tyep="text" name="BookTitle" placeholder="Book Name" id="form3Example1c" class="form-control" />
                                <label class="form-label" for="form3Example1c">Book Name</label>
                            </div>
                        </div>
                        

                        <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                                <input value="@Model.Author" tyep="text" name="Author" placeholder="Author" id="form3Example1c" class="form-control" />
                                <label class="form-label" for="form3Example1c">Author</label>
                            </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                                <input value="@Model.Genre" tyep="text" name="Genre" placeholder="Genre" id="form3Example3c" class="form-control" />
                                <label class="form-label" for="form3Example3c">Genre</label>
                            </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                                <input value="@Model.PublishDate" type="date" name="PublishDate" placeholder="Publishing Date" id="form3Example4c" class="form-control" />
                                <label class="form-label" for="form3Example4c">Address</label>
                            </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                                <input value="@Model.Status" tyep="text" name="Status" placeholder="Book Status" id="form3Example4c" class="form-control" />
                                <label class="form-label" for="form3Example4c">Status</label>
                            </div>
                        </div>


                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                        </div>

                    </form>

                </div>

            </div>
        </div>
    </div>



